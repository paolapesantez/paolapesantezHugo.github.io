	publisher = {Springer International Publishing},
	author = {Quinde, Christian and Guillermo, David and Siguenza-Guzman, Lorena and Orellana, Daniel and Pesántez-Cabrera, Paola},
	editor = {Rodriguez Morales, Germania and Fonseca C., Efraín R. and Salgado, Juan Pablo and Pérez-Gosende, Pablo and Orellana Cordero, Marcos and Berrezueta, Santiago},
	year = {2020},
	keywords = {Architecture balance analysis method, Attribute Driven Design, Geographic Information System, Geospatial information, Software architecture},
	pages = {501--515},
}

@inproceedings{sigua_proposal_2020,
