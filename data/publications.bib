	number = {4},
	urldate = {2022-10-17},
	journal = {British Journal of Educational Technology},
	author = {Broos, Tom and Hilliger, Isabel and Pérez-Sanagustín, Mar and Htun, Nyi-Nyi and Millecamp, Martijn and Pesántez-Cabrera, Paola and Solano-Quinde, Lizandro and Siguenza-Guzman, Lorena and Zuñiga-Prieto, Miguel and Verbert, Katrien and De Laet, Tinne},
	year = {2020},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/bjet.12934},
	keywords = {Learning Analytics, Global South, Higher Education, Organisational change, Policy},
	pages = {938--954},
}

@article{hilliger_towards_2020,
	title = {Towards learning analytics adoption: {A} mixed methods study of data-related practices and policies in {Latin} {American} universities},
	volume = {51},
	issn = {1467-8535},
	shorttitle = {Towards learning analytics adoption},
	url = {https://onlinelibrary.wiley.com/doi/abs/10.1111/bjet.12933},
	doi = {10.1111/bjet.12933},
	abstract = {In Latin American universities, Learning Analytics (LA) has been perceived as a promising opportunity to leverage data to meet the needs of a diverse student cohort. Although universities have been collecting educational data for years, the adoption of LA in this region is still limited due to the lack of expertise and policies for processing and using educational data. In order to get a better picture of how existing data-related practices and policies might affect the incorporation of LA in Latin American institutions, we conducted a mixed methods study in four Latin American universities (two Chilean and two Ecuadorian). In this paper, the qualitative data were based on 37 interviews with managers and 16 focus groups with 51 teaching staff and 45 students; the quantitative data were collected through two surveys answered by 1884 students and 368 teachers, respectively. The findings reveal opportunities to incorporate LA services into existing data practices in the four case studies. However, the lack of reliable information systems and policies to regulate the use of data imposes challenges that need to be overcome for future LA adoption.},
	language = {en},
	number = {4},
	urldate = {2022-10-17},
	journal = {British Journal of Educational Technology},
	author = {Hilliger, Isabel and Ortiz-Rojas, Margarita and Pesántez-Cabrera, Paola and Scheihing, Eliana and Tsai, Yi-Shan and Muñoz-Merino, Pedro J. and Broos, Tom and Whitelock-Wainwright, Alexander and Gašević, Dragan and Pérez-Sanagustín, Mar},
	year = {2020},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/bjet.12933},
	keywords = {Learning Analytics, Higher Education, Data Management Practices, Data Protection Policies, Latin America, Mixed Methods},
	pages = {915--937},
}

@article{hilliger_identifying_2020,
